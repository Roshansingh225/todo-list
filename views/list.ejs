<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo-list</title>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
  <div class="box">
    <h1>Todo-list</h1>
  </div>

  <div class="box">
     <% ros.forEach(item => { %>
      <div class="items" data-id="<%= item._id %>">
        <input type="checkbox">
        <p class="task-name"><%= item.name %></p>
        <button class="edit-btn" onclick="editTask('<%= item._id %>')">Edit</button>
<button class="delete-btn" onclick="deleteTask('<%= item._id %>')">Delete</button>
      </div>
    <% }) %>

    <form action="/" method="POST">
      <input type="text" name="newItem" placeholder="Enter your task" required>
      <button type="submit" class="add-btn">+</button>
    </form>
  </div>
<script>
  function startEdit(id) {
    let item = document.querySelector(`[data-id="${id}"]`);
    let p = item.querySelector(".task-name");
    let input = document.createElement("input");
    input.value = p.textContent;
    input.onkeydown=e=> {
      if (e.key==="Enter") submitEdit(id, input.value);
      if (e.key ==="Escape") item.replaceChild(p, input); };
item.replaceChild(input, p);
 input.focus(); }
function submitEdit(id, newName) {
    if (!newName.trim()) return alert("Task cannot be empty!");
    fetch("/" + id + "?_method=PUT", {
      method: "POST",
      headers: {"Content-Type":"application/x-www-form-urlencoded"},
      body: "name=" + encodeURIComponent(newName)
    }).then(()=>location.reload()); }
function submitDelete(id) { if (!confirm("Delete this task?")) return;
    fetch("/" + id + "?_method=DELETE", { method: "POST" }).then(()=>location.reload());}
</script>
</body>
</html>
