<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo-list</title>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
  <div class="box">
    <h1>Todo-list</h1>
  </div>

  <div class="box">
     <% ros.forEach(item => { %>
      <div class="items" data-id="<%= item._id %>">
        <input type="checkbox">
        <p class="task-name"><%= item.name %></p>
        <button class="edit-btn" onclick="editTask('<%= item._id %>')">Edit</button>
<button class="delete-btn" onclick="deleteTask('<%= item._id %>')">Delete</button>
      </div>
    <% }) %>

    <form action="/" method="POST">
      <input type="text" name="newItem" placeholder="Enter your task" required>
      <button type="submit" class="add-btn">+</button>
    </form>
  </div>

  <script>
    function editTask(id) {const item = document.querySelector(`[data-id="${id}"]`);
      const p = item.querySelector(".task-name");
      const old = p.textContent;

      const input = document.createElement("input");
      input.value = old;
      item.replaceChild(input, p);
      input.focus();

      input.onkeydown = e => {
        if (e.key === "Enter") {e.preventDefault();
          submitEdit(id, input.value);
        }if (e.key === "Escape") cancelEdit(item, old, input);};
 }

   
    function submitEdit(id, newName) {
if (!newName.trim()) return alert("Task cannot be empty");
      const form = document.createElement("form");
      form.method = "POST";
      form.action = "/" + id + "?_method=PUT";
      form.innerHTML = `<input type="hidden" name="name" value="${newName}">`;
      document.body.appendChild(form).submit();
    }

   
    function cancelEdit(item, old, input) {
      const p = document.createElement("p");
      p.className = "task-name";
      p.textContent = old;
      item.replaceChild(p, input); }

 function deleteTask(id) {if (!confirm("Delete this task?")) return;
      const form = document.createElement("form");
      form.method = "POST";
      form.action = "/" + id + "?_method=DELETE";
      document.body.appendChild(form).submit();}
  </script>
</body>
</html>
