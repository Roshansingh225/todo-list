<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo-list</title>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
  <div class="box">
    <h1>Todo-list</h1>
  </div>

  <div class="box">
     <% ros.forEach(item => { %>
      <div class="items" data-id="<%= item._id %>">
        <input type="checkbox">
        <p class="task-name"><%= item.name %></p>
        <button class="edit-btn" onclick="editTask('<%= item._id %>')">Edit</button>
<button class="delete-btn" onclick="deleteTask('<%= item._id %>')">Delete</button>
      </div>
    <% }) %>

    <form action="/" method="POST">
      <input type="text" name="newItem" placeholder="Enter your task" required>
      <button type="submit" class="add-btn">+</button>
    </form>
  </div>

  <script>
  function editTask(id) {
    let task = document.querySelector(`[data-id="${id}"] .task-name`);
    let newName = prompt("Edit task:", task.textContent);
    if (newName && newName.trim()) {
        fetch(`/${id}?_method=PUT`, {
  method: "POST",headers: {"Content-Type":"application/x-www-form-urlencoded"}, body: "name=" + encodeURIComponent(newName.trim())
        }).then(() => location.reload());}}
function deleteTask(id) { if (!confirm("Delete this task?")) return;
    fetch("/" + id + "?_method=DELETE", { method: "POST" }).then(()=>location.reload());}
</script>
</body>
</html>
